{
    "manifest_version": 2,

    "name": "Zeocode",
    "description": "Location sharing simplified",
    "version": "0.1",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": [
            ],
            "js": [
                "libs/jquery-2.1.1.min.js",
                "js/zeocode.js"
            ],
            "all_frames": true
        }
    ],

    "browser_action": {
        "default_icon": "icon2.png",
        "default_popup": "popup.html",
        "default_title": "Zeocode"
    },

    "background": {
        "scripts": ["js/background.js"]
    },

    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    },

    "permissions": [
        "tabs"
    ]
}
