{
    "manifest_version": 2,

    "name": "Zeocode",
    "description": "Location sharing simplified",
    "version": "0.1",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": [
            ],
            "js": [
                "js/zeocode.js",
            ]
        }
    ],

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Zeocode"
    },

    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    },

    "permissions": [
        "tabs"
    ]
}
